        <h1>{{ page.title }}</h1>
        {{- page.content ~}}
        {%- for p in pages ~%}
        <article>
          <header>
            <h2><a href="{{ url(p) }}">{{ p.title|e }}</a></h2>
            {%- set readtime = readtime(p.content) ~%}
            <time>{{ p.date|format_date('long') }}</time> Â· {% trans %}%readtime% min{% endtrans ~%}
          </header>
        </article>
        {%- endfor ~%}
        {{- include('partials/paginator.html.twig', {'page': page}, with_context = false) ~}}
      </article>
      {%- endblock content ~%}

